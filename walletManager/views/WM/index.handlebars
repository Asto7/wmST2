{{#each WM}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <p>Amount: {{Amount}}</p>
    <p>Creation date: {{creationDate}}</p>
    <a class="btn btn-dark btn-block mb-2" href="/WM/edit/{{id}}">Edit</a>
    <form method="post" action="/WM/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
  </div>
{{else}}
  <p>No Wallet listed</p>
{{/each}}
