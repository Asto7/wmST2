{{#each WM}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>Email: {{email}}</p>
    <p>Amount: {{Amount}}</p>
    <p>Request Time: {{requestDate}}</p>
    <!-- <a class="btn btn-dark btn-block mb-2" href="/WM/edit/{{id}}">Edit</a> -->
    <form method="post" action="/WM/settle/{{id}}">
      <input type="submit" class="btn btn-dark btn-block mb-2" value="Settle">
    </form>
  </div>
{{else}}
  <p>Everything Already settled</p>
{{/each}}
