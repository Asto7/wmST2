<div class="card card-body">
  <h3>Tracker</h3>
  <form action="/WM/split" method="post">

    <div class="form-group">
      <label for="email">Email:</label>
      <input class="form-control" name="email" value="{{email}}" required>
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control" name="title" value="{{title}}" type="text" required>
    </div>

    <div class="form-group">
      <label for="due">Amount</label>
      <input class="form-control" name="Amount" value="{{Amount}}" type="text" required>
    </div>

    <button type="submit" class="btn btn-dark">Submit</button>
  </form>
</div>
